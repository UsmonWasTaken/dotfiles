# Editor
alias v="nvim"
alias sv="sudo -E -s nvim"

# File listing
alias ls="eza --color=always --icons=always --group-directories-first --hyperlink --git-ignore"
alias ll="eza --long --color=always --icons=always --group-directories-first --hyperlink --git-ignore"
alias la="eza --all --long --color=always --icons=always --group-directories-first --hyperlink"
alias lt="eza --tree --color=always --icons=always --group-directories-first --hyperlink --git-ignore"

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Minimalism
alias c="clear"
